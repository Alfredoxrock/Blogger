rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Blog posts - publicly readable, but only authenticated users can write
    match /posts/{postId} {
      allow read: if true; // Anyone can read blog posts
      allow write: if true; // Allow writes for testing (normally would require auth)
    }
    
    // Categories - publicly readable, authenticated write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Blog settings - publicly readable, authenticated write  
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Comments - publicly readable, authenticated write
    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Subscribers - only authenticated users can read/write
    match /subscribers/{subscriberId} {
      allow read, write: if request.auth != null;
    }
  }
}
